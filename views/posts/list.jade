extends ../layout

block content
    h1.page-header= title
      | 
      div.pull-right
        a.btn.btn-success(href="/manage/posts/add")
          i.fa.fa-plus 
          |  Add New
    p.page-subheader All you need to manage your posts
    if posts
      .dataTable_wrapper
        table.table-listing.table.table-striped.table-bordered.table-hover
          thead
            tr
              th Title
              th(width='15%') Author
              th(width='15%') Category
              th(width='10%') Actions
          tbody
            each post, i in posts
              tr.odd.gradeX
                td #{post.title}
                td #{post.author}
                td #{post.category}
                td(align='center')
                  a(href='/manage/posts/#{post._id}', class='btn btn-warning btn-circle', title='Edit Post')
                      i.fa.fa-pencil 
                  |  
                  a(href='/manage/posts/remove/#{post._id}', class='btn btn-danger btn-circle', title='Edit Post')
                      i.fa.fa-remove 
        // /.table-responsive